<apex:page controller="AccountsSearchController">
    <apex:form >
        <apex:pageBlock title="Account Search">

            <apex:pageBlockButtons >
                <apex:commandButton action="{!Search}" value="Search" />
            </apex:pageBlockButtons>

            <apex:pageblockSection >
                <apex:inputText value="{!acc.Name}" />
                <apex:inputText value="{!acc.BillingCity}" />
                <apex:inputText value="{!acc.BillingState}" />
                <apex:inputText value="{!acc.BillingCountry}" />
            </apex:pageblockSection>
        </apex:pageBlock>

        <apex:pageBlock id="resultId" rendered="{!if(lstAccount != null && lstAccount.size > 0, true,false )}">
              
            <apex:pageBlockSection columns="1">
        		<apex:pageBlockTable value="{!lstAccount}" var="acc" >
                    <apex:column value="{!acc.Name}"/>
                    <apex:column value="{!acc.BillingCity}"/>
                    <apex:column value="{!acc.BillingState}"/>
                    <apex:column value="{!acc.BillingCountry}"/>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
            
            <apex:pageblockButtons >
                <div style="text-align:left">
                    Page {!PageNumber} of {!MCEILING(Con.resultSize/10)}
 					<apex:commandButton value="First Page" action="{!First}"/>
					<apex:commandLink action="{!Previous}" value="Previous Page" rendered="{!Con.HasPrevious}"/> 
                    <apex:commandButton value="Next" rendered="{!Con.HasNext}" action="{!Next}"/>
					<apex:commandButton value="Last Page" action="{!Last}"/>
                </div>
			</apex:pageblockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>